{
  "trailingComma": "none",
  "printWidth": 120,
  "plugins": ["@prettier/plugin-xml"],
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "**/*.{cls,trigger}",
      "options": {
        "parser": "apex",
        "tabWidth": 4
      }
    },
    {
      "files": "**/*.{cmp,page,component}",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "**/*.{yaml,yml}",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "**/*.xml",
      "options": {
        "parser": "xml"
      }
    }
  ]
}